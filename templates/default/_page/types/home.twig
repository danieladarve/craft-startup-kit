{% extends "_layouts/global" %}

{% block content %}
  {%- minify -%}

    {# ------- Variables ------- #}

    {# ------- Template ------- #}

    {% for block in entry.pageBlockContent.all() %}
      {% include ['_blocks/' ~ block.type.handle] ignore missing %}
    {% endfor %}

  {%- endminify -%}
{% endblock %}

{# ------- Critical CSS ------- #}

{% if entry is defined %}
  {% block criticalCss %}
    {%- spaceless -%}
      {{ source ('_criticalCss/' ~ entry.slug ~ '.css', ignore_missing = true) }}
    {%- endspaceless -%}
  {% endblock %}
{% endif %}
