{#
   Field Textarea
   Outputs a textarea field with the correct markup

   @type {include}
   @param {string} label
   @param {string} type
   @param {string} name
   @param {string} value
   @param {string} placeholder
   @param {string} class
   @param {string} attributes
   @param {bool} required
#}

{% set id = label is defined ? label|kebab : 'textarea-' ~ random(100,999) %}

{% if label is defined %}
   {% include '_components/field/label' %}
{% endif %}

{% set baseClass = '
   transition--default
   appearance-none
   block
   w-full
   bg-white
   text-gray-700
   border
   border-gray-400
   px-3
   py-3
   rounded
   shadow
   leading-tight
   placeholder-gray-500
   placeholder-opacity-100
   hover:border-gray-500
   focus:border-primary-500 
   focus:outline-none
   focus:shadow-outline
' %}

{% set class = class is defined ? baseClass ~ ' ' ~ class : baseClass %}
{% set type = type ?? 'text' %}

<textarea
   type="{{ type }}"
   name="{{ name }}"
   id="{{ id }}"
   class="{{ class }}"
   {{ placeholder is defined ? ('placeholder="' ~ placeholder ~ '"')|raw }}
   {{ attributes is defined ? attributes|raw }}
   {{ required is defined ? 'required' }}
>{% spaceless %}{{ value is defined ? value }}{% endspaceless %}</textarea>
